{
  "name": "@nicoriera/react-modal-converted",
  "version": "1.0.6",
  "description": "A functional, accessible, and customizable modal component for React, inspired by jquery-modal.",
  "author": "Nicolas Riera",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nicoriera/react-modal.git"
  },
  "main": "dist/Modal.js",
  "types": "dist/Modal.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/Modal.js",
      "types": "./dist/Modal.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "keywords": [
    "react",
    "modal",
    "dialog",
    "accessible",
    "component",
    "jquery-modal"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc -p tsconfig.json",
    "publish": "npm run build && npm publish",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-jest": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@tailwindcss/postcss": "^4.1.5",
    "@tailwindcss/vite": "^4.1.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitest/browser": "^3.1.3",
    "@vitest/coverage-v8": "^3.1.3",
    "autoprefixer": "^10.4.21",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.52.0",
    "postcss": "^8.5.3",
    "storybook": "^8.6.12",
    "tailwindcss": "^4.1.5",
    "ts-jest": "^29.3.2",
    "typescript": "^5.0.0",
    "vitest": "^3.1.3"
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/__tests__"
  ],
  "publishConfig": {
    "access": "public"
  }
